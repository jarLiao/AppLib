<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="#ffffff">

    <TextView
        android:id="@+id/tv_unit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:text="公制(米/公里)"/>

    <ImageView
        android:id="@+id/iv_unit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_radiobuttonoff"/>

    <TextView
        android:id="@+id/tv_unit_readme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_unit_text"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/text_title"
        android:textSize="14sp"
        android:text="12:00~14:00不进行提醒00不进行提醒00不进行提醒00不进行提醒"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_background"/>
</RelativeLayout>